{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
    <div class="container py-5">
        <h2 class="text-primary my-4">Vos données</h2>

        <div class="row">
            <div class="col-md-6">
                <h5 class="mb-3">Données personnelles :</h5>
                <ul class="list-group mb-3">
                    <li class="list-group-item"><strong>Numéro client :</strong> {{ user.id }}</li>
                    <li class="list-group-item"><strong>Email :</strong> {{ user.email }}</li>
                    <li class="list-group-item"><strong>Prénom :</strong> {{ user.firstname }}</li>
                    <li class="list-group-item"><strong>Nom :</strong> {{ user.lastname }}</li>
                </ul>
            </div>

            <div class="col-md-6">
                <h5 class="mb-3">Modifier vos informations :</h5>
                <ul class="list-group mb-3">
                    <a href="/customer/{{ user.id }}/data/modify/lastname" style="text-decoration: none;">
                        <li class="list-group-item list-group-item-action d-flex justify-content-between">Nom</li>
                    </a>
                    <a href="/customer/{{ user.id }}/data/modify/firstname" style="text-decoration: none;">
                        <li class="list-group-item list-group-item-action d-flex justify-content-between">Prénom</li>
                    </a>
                    <a href="/customer/{{ user.id }}/data/modify/password" style="text-decoration: none;">
                        <li class="list-group-item list-group-item-action d-flex justify-content-between">Mot de passe</li>
                    </a>
                </ul>
            </div>

            <div>
                <a class="btn btn-outline-danger mt-4" href="/customer/{{ user.id }}/delete">Supprimer le compte</a>
            </div>
        </div>
    </div>
{% endblock %}
